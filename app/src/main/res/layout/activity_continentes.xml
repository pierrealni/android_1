<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.empresa.ejercicio1.ContinentesActivity"
    android:background="@drawable/f0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contenedor"
        android:orientation="vertical"
        >
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_radio"
            android:onClick="verAmerica"
            android:button="@null"
            android:layout_weight="1"
            android:padding="30dp"
        />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_radio"
            android:onClick="verEuropa"
            android:button="@null"
            android:layout_weight="1"
            android:padding="30dp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_radio"
            android:onClick="verAsia"
            android:button="@null"
            android:layout_weight="1"
            android:padding="30dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_radio"
            android:button="@null"
            android:layout_weight="1"
            android:padding="30dp"
            android:onClick="verAfrica"
            />
    </RadioGroup>

</RelativeLayout>
